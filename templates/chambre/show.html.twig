{% block title %}Chambre{% endblock %}

{% block body %}
    <h1>Chambre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ chambre.number }}</td>
            </tr>
            <tr>
                <th>Floor</th>
                <td>{{ chambre.floor }}</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>{{ chambre.area }}</td>
            </tr>
            <tr>
                <th>PricePerNight</th>
