{% extends 'base.html.twig' %}

{% block title %}Travaux{% endblock %}

{% block body %}
    <h1>Travaux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ travaux.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ travaux.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ travaux.description }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ travaux.startDate ? travaux.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ travaux.endDate ? travaux.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsDone</th>
                <td>{{ travaux.isDone ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_travaux_index') }}">back to list</a>

    <a href="{{ path('app_travaux_edit', {'id': travaux.id}) }}">edit</a>

    {{ include('travaux/_delete_form.html.twig') }}
{% endblock %}
